<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Night.Theme.HomeworkProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Extended.Theme.HomeworkProject" parent="Base.Night.Theme.HomeworkProject">
        <item name="materialButtonStyle">@style/BasicButtonTheme.Night</item>
        <item name="android:textViewStyle">@style/TextViewStyle.Night</item>
        <item name="radioButtonStyle">@style/ThemeRadioButton.Night</item>
        <item name="customScreenBackgroundColor">@color/grey</item>
        <item name="characterCardBackgroundColor">@color/light_black</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton.Night</item>
    </style>

</resources>
