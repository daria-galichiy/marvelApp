<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.V23.Theme.HomeworkProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Theme.HomeworkProject" parent="Base.V23.Theme.HomeworkProject">
        <item name="materialButtonStyle">@style/BasicButtonTheme</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="radioButtonStyle">@style/ThemeRadioButton</item>
    </style>

    <style name="Theme.HomeworkProject" parent="Base.Theme.HomeworkProject"/>

    <style name="StartScreenConstraintLayout">
        <item name="android:background">@color/white</item>
    </style>

</resources>
