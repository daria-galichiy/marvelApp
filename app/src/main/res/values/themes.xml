<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HomeworkProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Extended.Theme.HomeworkProject" parent="Base.Theme.HomeworkProject">
        <item name="materialButtonStyle">@style/BasicButtonTheme</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="radioButtonStyle">@style/ThemeRadioButton</item>
        <item name="customScreenBackgroundColor">@color/matte_white</item>
    </style>

    <style name="Extended.GeneralAttributes.Theme.HomeworkProject" parent="Extended.Theme.HomeworkProject">
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyTheme.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyTheme.Body1</item>
    </style>

    <style name="Theme.HomeworkProject" parent="Extended.GeneralAttributes.Theme.HomeworkProject"/>

</resources>
