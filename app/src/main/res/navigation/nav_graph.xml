<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startScreenFragment">

    <fragment
        android:id="@+id/startScreenFragment"
        android:name="ru.alfacampus.homeworkproject.ui.StartScreenFragment"
        android:label="start_screen"
        tools:layout="@layout/start_screen" >
        <action
            android:id="@+id/to_customViewScreenFragment"
            app:destination="@id/customViewScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/customViewScreenFragment"
        android:name="ru.alfacampus.homeworkproject.ui.CustomViewScreenFragment"
        android:label="CustomViewScreenFragment" >
        <action
            android:id="@+id/to_recyclerViewScreenFragment"
            app:destination="@id/recyclerViewScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/recyclerViewScreenFragment"
        android:name="ru.alfacampus.homeworkproject.ui.RecyclerViewScreenFragment"
        android:label="RecyclerViewScreenFragment" />
</navigation>